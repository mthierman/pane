{
    "private": true,
    "author": "mthierman",
    "name": "pane",
    "version": "0.0.0",
    "description": "C++ library for Windows",
    "symbol": "ðŸªŸ",
    "homepage": "https://github.com/mthierman/pane",
    "repository": {
        "type": "git",
        "url": "https://github.com/mthierman/pane.git"
    },
    "packageManager": "pnpm@10.19.0",
    "type": "module",
    "exports": {
        ".": "./node/index.ts",
        "./webview": "./node/webview.ts"
    },
    "scripts": {
        "cmake-debug": "cmake --preset debug && cmake --build --preset debug",
        "cmake-release": "cmake --preset release && cmake --build --preset release",
        "check": "tsc -b",
        "example:dev": "vite examples/webview/gui",
        "example:host": "vite examples/webview/gui --host",
        "example:build": "tsc -b && vite build examples/webview/gui",
        "example:watch": "tsc -b && vite build examples/webview/gui --watch",
        "example:preview": "tsc -b && vite build examples/webview/gui && vite preview examples/webview/gui"
    },
    "devDependencies": {
        "@js-temporal/polyfill": "^0.5.1",
        "@types/node": "^24.9.1",
        "octokit": "^5.0.4",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "vite": "^7.1.12",
        "vite-plugin-singlefile": "^2.3.0"
    }
}
