{
    "name": "pane",
    "private": true,
    "version": "0.0.0",
    "description": "C++ library for Windows",
    "type": "module",
    "packageManager": "pnpm@10.19.0",
    "exports": {
        ".": "./pane/typescript/index.ts",
        "./webview": "./pane/typescript/webview.ts"
    },
    "scripts": {
        "notify": "node ./scripts/notify.ts",
        "check": "tsc -b",
        "example:dev": "vite examples/webview/gui",
        "example:host": "vite examples/webview/gui --host",
        "example:build": "tsc -b && vite build examples/webview/gui",
        "example:watch": "tsc -b && vite build examples/webview/gui --watch",
        "example:preview": "tsc -b && vite build examples/webview/gui && vite preview examples/webview/gui"
    },
    "devDependencies": {
        "@js-temporal/polyfill": "^0.5.1",
        "@octokit/rest": "^22.0.0",
        "@types/node": "^24.9.1",
        "octokit": "^5.0.4",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "vite": "^7.1.12",
        "vite-plugin-singlefile": "^2.3.0"
    }
}
